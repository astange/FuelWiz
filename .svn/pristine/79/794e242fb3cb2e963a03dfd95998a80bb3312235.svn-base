
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

<ScrollView
    android:id="@+id/Scrollview1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <EditText
        android:id="@+id/editMPG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tvMPG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editMPG"
        android:layout_alignBottom="@+id/editMPG"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:text="MPG:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvDistance1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStation1"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:text="Distance to Station 1:"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/tvDistance2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStation2"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:text="Distance to Station 2:"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/editDistance1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvDistance1"
        android:layout_alignParentRight="true"
        android:ems="10" />
    
    <EditText
        android:id="@+id/editDistance2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvDistance2"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <TextView
        android:id="@+id/tvStation1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMPG"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:text="Price at station 1:"
        android:textAppearance="?android:attr/textAppearanceMedium" />
	
    <TextView
        android:id="@+id/tvStation2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDistance1"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:text="Price at station 2:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editStation1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvStation1"
        android:layout_alignParentRight="true"
        android:ems="10" />
    
     <EditText
        android:id="@+id/editStation2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvStation2"
        android:layout_alignParentRight="true"
        android:ems="10" />

     <Button
         android:id="@+id/bCompute"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/tvGallons"
         android:layout_centerHorizontal="true"
         android:text="Calculate" />

     <EditText
         android:id="@+id/editGallons"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/tvGallons"
         android:layout_alignParentRight="true"
         android:ems="10" />

     <TextView
         android:id="@+id/tvGallons"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/tvDistance2"
         android:layout_alignParentLeft="true"
         android:padding="5dp"
         android:text="Gallons to fill:"
         android:textAppearance="?android:attr/textAppearanceMedium" />
     
     <TextView
    android:id="@+id/tvResult"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/bCompute"
    android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>

</ScrollView>



</RelativeLayout>
