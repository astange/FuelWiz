<?xml version="1.0" encoding="utf-8"?>
<View xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
 <RelativeLayout
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/totalCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/price"
                android:ems="10"
                android:inputType="none"
                android:text="@string/viewCost" />

            <TextView
                android:id="@+id/durationAway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/totalCost"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:inputType="none"
                android:text="@string/viewDurationAway" />

            <TextView
                android:id="@+id/stationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/totalCost"
                android:ems="10"
                android:inputType="none"
                android:text="@string/viewStationName" />

            <TextView
                android:id="@+id/distanceAway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/price"
                android:ems="10"
                android:inputType="none"
                android:text="@string/viewDistanceAway" >
         


        </TextView>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:ems="10"
                android:inputType="none"
                android:text="@string/viewPrice" />

</RelativeLayout>
</View>